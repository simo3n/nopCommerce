@model AgentModel

@using Newtonsoft.Json

<div class="card-body">

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="ParentAgentId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="ParentAgentId" asp-items="Model.AvailableAgents" />
            <span asp-validation-for="ParentAgentId"></span>
        </div>
    </div>
    
</div>

<nop-alert asp-alert-id="statesAlert" asp-alert-message="@T("Admin.Common.Alert.States.Failed")" />